#:kivy 2.1.0

<SettingsWindowCustom>:
    canvas:
        Color:
            rgba: app.theme['background']
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'

        BoxLayout:                      #Space for the actionbar
            size_hint_y: 0.1

        FloatLayout:

            BoxLayout:
                pos_hint: {'center_x': 0.15, 'center_y': 0.75}
                size_hint: (0.2,0.2)
                canvas.before:
                    Color:
                        rgba: (0,0,0,0.5)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]

                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'Name'
                        color: app.theme['gui_text']
                    Label:
                        text: 'Function'
                        color: app.theme['gui_text']
                    Label:
                        text: 'Description'
                        color: app.theme['gui_text']

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.3
                    CheckBox:
                        id: name
                        on_release: root.update_name(self.active)
                    CheckBox:
                        id: function
                        on_release: root.update_function(self.active)
                    CheckBox:
                        id: description
                        on_release: root.update_description(self.active)

                FloatLayout:
                    Button:
                        id: button
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        size_hint: (0.7, 0.6)
                        fs: (self.height*1**2 + self.width*1**2)/15

                        background_color: (0,0,0,0)
                        background_normal: ''
                        canvas.before:
                            Color:
                                rgba: app.theme['cat_button'] if self.state == 'normal' else  app.theme['cat_button_pushed'] #(1,1,1,1)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [100]

                    BoxLayout:
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        size_hint: (0.7, 0.6)
                        id: button_label
                        orientation: 'vertical'
                        fs: (self.height*1**2 + self.width*1**2)/15

