#:kivy 2.1.0


<HelpScreenCustom@Widget>:
#    canvas:
#        Color:
#            rgba: app.theme['background']
#        Rectangle:
#            size: self.size
#            pos: self.pos
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'

        ActionBarCustom:


        FloatLayout:

            Label:
                text: root.version
#                size_hint: 0.15, 0.08
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}


            GUI_Button:
                text: 'go to tutorial'
                size_hint: 0.15, 0.07
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                on_release: root.open_link_tutorial()

            GUI_Button:
                text: 'contact'
                size_hint: 0.15, 0.07
                pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                on_release: root.open_link_contact()

            GUI_Button:
                text: 'support the project'
                size_hint: 0.15, 0.07
                pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                on_release: root.open_link_shop()
