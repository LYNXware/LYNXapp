
#:set backdrop (0,0,0,0.3)
#:set padding_constant [3,4,3,3]
#:set spacing_constant 1
#:set radius_constant [5]

<KeyAssignmentCustom>:

    orientation: 'vertical'
    ActionBarCustom:

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'

        BoxLayout:          # function description, save, reset
			size_hint_y: 0.2
			padding: padding_constant
			spacing: 5 #spacing_constant
            canvas:
                Color:
                    rgba: backdrop
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: radius_constant

			Label:   #button name label
				text: root.current_button['name']
				size_hint_x: 0.1
				color: (1, 1, 1, 1)
		        canvas.before:
		            Color:
		                rgba: 0, 1, 1, .5

		            Rectangle:
		                pos: self.pos
		                size: self.size

            BoxLayout:   # funktion and description
				spacing: 4
				orientation: 'vertical'
				BoxLayout:
                    canvas:
                        Color:
                            rgba: backdrop
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Label:
                        text: 'Funktion ->'
                        size_hint_x: 0.15
                    Label:
                        text: root.current_button['function']
                        id: function

                BoxLayout:
                    canvas:
                        Color:
                            rgba: backdrop
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Label:
                        text: 'Description ->'
                        size_hint_x: 0.15
                    TextInput:
                        id: description
                        size_hint: (1,0.8)
                        pos_hint: {'center_x': 0.36, 'center_y': 0.5}
                        #hint_text: root.current_button['description']
                        text: root.current_button['description']
                        hint_text_color: (.1, .1, .1, 1)
                        background_color: (1, 1, 1, .7)
                        multiline: False

            BoxLayout:   #  save and reset
                size_hint_x: 0.2
                orientation: 'vertical'
                Button:
                    text: 'Reset'
                    background_color: (1,0,0,1)
                    on_release: root.reset()

                Button:
                    text: 'Save'
                    background_color: (0,1,0,1)
                    on_release:
                        root.save_button()
                        root.reset()
#                        app.root.get_screen('StartWindow').children[1].update_start_window()
                        app.root.ids.startscreen.children[0].update_start_window()
#                        app.root.get_screen('StartWindow').children[1].transmit_layouts()
                        app.root.current = 'StartScreen'


        BoxLayout:
            padding: padding_constant
			spacing: spacing_constant
			orientation: 'vertical'
            CellBox:
                id: letters
            CellBox:
                id: numbers
            CellBox:
                id: keypad1
            CellBox:
                id: keypad2
            CellBox:
                id: symbols
            CellBox:
                id: specials
            CellBox:
                id: modifiers
            CellBox:
                id: functions

            CellBox:
                CustomStaticButton:
                    text: 'Left Click'
                    asciiValue: b'\x10\xf1'
                CustomStaticButton:
                    text: 'Middle Click'
                    asciiValue: b'\x10\xf2'
                CustomStaticButton:
                    text: 'Right Click'
                    asciiValue: b'\x10\xf3'
                CustomStaticButton:
                    text: 'Scroll Up '
                    asciiValue: b'\x10\xf4'
                CustomStaticButton:
                    text: 'Scroll Down '
                    asciiValue: b'\x10\xf5'

            CellBox:
                CustomStaticButton:
                    text: 'major / minor'
                    asciiValue: b'\x1a\xfb' #0xFA 0xFB
                CustomStaticButton:
                    text: 'main / sub'
                    asciiValue: b'\x1a\xfc'  #0xFA 0xFB
                CustomStaticButton:
                    text: 'gyro trigger'
                    asciiValue: b'\x1a\xfd'  #0xFA 0xFB


<CustomDynamicButton>:
    color: app.theme['gui_button_text']
    background_color: app.theme['gui_button']
#    font_size: 20


<CustomStaticButton@Button>:
    color: app.theme['gui_button_text']
    background_color: app.theme['gui_button']
    on_release: self.parent.parent.parent.parent.custom_callback(self)  # Define your custom behavior here


<CellBox@BoxLayout>:
    padding: [3,4,3,3]
    spacing: 1
    canvas:
        Color:
            rgba:  (0,0,0,0.3)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [5]